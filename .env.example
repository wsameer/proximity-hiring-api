# Server
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
APP_URL=http://localhost:3001

# Database (PostgreSQL with PostGIS)
POSTGRES_DB=jobximity
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For Docker: HOST=localhost (connects from host machine)
# Inside Docker containers: HOST=postgres (container name)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jobximity

# Redis
REDIS_URL=redis://localhost:6379

# BetterAuth
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=change_me_to_secure_random_string_min_32_chars

# Generate secure secret with:
# openssl rand -base64 32
