# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL with PostGIS)
POSTGRES_DB=database_name
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/database_name

# Redis
REDIS_URL=redis://localhost:6379

# BetterAuth
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=change_me_to_secure_random_string_min_32_chars

# Generate secure secret with:
# openssl rand -base64 32
